<%= form_with model: add_content, url: url, method: :post, local: false do |f| %>
  <%= f.hidden_field :todo_list_id, value: todo_list_id %>

  <div class="form-group">
    <%= f.label "メモ内容" %>
    <%= f.text_area :content, placeholder: "内容", class: "form-control" %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "追加", class: 'btn btn-outline-success' %>
  </div>
<% end %>
